{
  "manifest_version": 3,
  "name": "Comparador de Precios",
  "version": "1.0",
  "description": "Compara precios autom√°ticamente en Amazon, eBay y MercadoLibre.",
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "Comparador de Precios"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.ebay.com/*",
    "https://*.mercadolibre.com.mx/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.ebay.com/*",
        "https://*.mercadolibre.com.mx/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
